{
  "name": "Spotlight App",
  "description": "Extens√£o para enriquecer documentos do AVA",
  "version": "0.2",
  "permissions": [
    "tabs",
    "storage",
    "unlimitedStorage",
    "downloads",
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "jspdf.debug.js",
        "pdf.js",
        "pdf.worker.js",
        "popup.js",
        "send_links.js"
      ]
    }
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Spotlight App"
  },
  "manifest_version": 2,
  "content_security_policy": "script-src 'self'; object-src 'self'"
}
